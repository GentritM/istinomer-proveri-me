{
  "manifest_version": 2,
  "name": "Istinomer",
  "description": "Dodatak za Chrome kojim se čitaoci informativnih web portala pozivaju da pošalju Istinomeru činjenice na proveru. Obeležite tekst koji želite da proverite, i desnim klikom izaberite Istinomer i time ste poslali izjavu sa činjenicama na proveru.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icons/icon-19.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "js/jquery-1.12.0.min.js",
      "background.js",
      "popup.js",
      "blic-fact-checker.js"
    ],
    "css":["custom-css.css"]
  },
  "permissions": [
    "notifications",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "http://localhost:5000/*",
    "http://*.datacentar.io/*",
    "https://*.blic.rs/*"

  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}